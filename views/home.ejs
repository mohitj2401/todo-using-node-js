<% include ./partials/header %>


<p class="Content"> <%# user.name %> </p>

<%  posts.forEach(function(post){ %>
<div class="PostContainer">
  <h1 class="hometitle"><%=post.title%></h1>
  <h6 class="author">by <%=post.author.toUpperCase()%></p>
    <% if(post.content.length>150){ %>
    <p class="Content">
      <%=post.content.substring(0, 150)+ "...."%>
    </p>
    <a href="/posts/<%=post._id%>" class="btn btn-outline-secondary btn-sm">
      Read More</a>

    <% }else{ %>
    <p class="Content">
      <%=post.content%>
    </p>
    <% } %>
</div>

<% }) %>

<% include ./partials/footer %>